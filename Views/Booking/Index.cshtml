@model IEnumerable<BookingSystem.Models.BookingModel>
@{
}

<h2>Bookings List</h2>

<table class="table">
    <thead>
        <tr>
            <th>Room Name</th>
            <th>User Name</th>
            <th>Booking Date</th>
            <th>Start Time</th>
            <th>End Time</th>
            <th>Actions</th>
            <th>View By User</th>
            <th>View By Room</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var booking in Model)
        {
            <tr>
                <td>@booking.RoomName</td>
                <td>@booking.UserName</td>
                <td>@booking.BookingDate.ToShortDateString()</td>
                <td>@booking.StartTime</td>
                <td>@booking.EndTime</td>
                <td>
                    <a href="@Url.Action("Edit", new { id = booking.Id })" class="btn btn-primary btn-sm">Edit</a>
                    <a href="@Url.Action("Delete", new { id = booking.Id })" class="btn btn-danger btn-sm">Delete</a>
                </td>
                <td>
                    <a href="@Url.Action("ViewBookingsByUser", new { userId = booking.UserID })" class="btn btn-primary btn-sm">View</a>
                </td>
                <td>
                    <a href="@Url.Action("ViewBookingsByRoom", new { roomId = booking.RoomID })" class="btn btn-primary btn-sm">View</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a href="@Url.Action("Create")" class="btn btn-primary">Create New Booking</a>
