@model BookingSystem.Models.BookingModel
@{
}

<h2>Create Booking</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="RoomID"></label>
        <select asp-for="RoomID" asp-items="ViewBag.Rooms" class="form-control"></select>
    </div>
    <div class="form-group">
        <label asp-for="UserID"></label>
        <select asp-for="UserID" asp-items="ViewBag.Users" class="form-control"></select>
    </div>
    <div class="form-group">
        <label asp-for="BookingDate"></label>
        <input asp-for="BookingDate" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="StartTime"></label>
        <input asp-for="StartTime" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="EndTime"></label>
        <input asp-for="EndTime" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>

<a asp-action="Index" class="btn btn-secondary">Back to List</a>
