@model IEnumerable<BookingSystem.Models.BookingModel>
@{
}

<h2>Bookings for User</h2>

<table class="table">
    <thead>
        <tr>
            <th>Room Name</th>
            <th>User Name</th>
            <th>Booking Date</th>
            <th>Start Time</th>
            <th>End Time</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var booking in Model)
        {
            <tr>
                <td>@booking.RoomName</td>
                <td>@booking.UserName</td>
                <td>@booking.BookingDate.ToShortDateString()</td>
                <td>@booking.StartTime</td>
                <td>@booking.EndTime</td>
            </tr>
        }
    </tbody>
</table>

<a href="@Url.Action("Index")" class="btn btn-primary">Back to Bookings</a>
